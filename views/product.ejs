<script src="https://ar-3d-viewer.cloudinary.com/main.js"></script>
<%- include('partials/header') -%>

<main>
  <section class="flex justify-center items-center">
    <div class="flex flex-col justify-center items-center my-8 max-w-xl">
        <h1 class="text-2xl	mb-2"><%= product.title %></h1>
        <div class="w-full mb-2">
          <% if (product.file.slice(-3) === "glb") { %>
              <ar-3d-viewer cloud="dx7g39ojq" ar="false" models="<%= product.file.slice(50)%>">
                <button slot="zoom-in" class="hidden"></button>
                <button slot="zoom-out" class="hidden"></button>
              </ar-3d-viewer>
          <% } else { %>
            <img class="aspect-square	object-cover flex m-auto max-h-64" src="<%= product.file%>">
          <% } %>
        </div>
        <div class="flex space-x-12">
          <h3 class="text-sm font-medium text-gray-900 dark:text-white">Likes: <%= product.likes %></h3>
          <h3 class="text-sm font-medium text-gray-900 dark:text-white">Downloads: <%= product.downloads %></h3>
        </div>
        <div class=" flex justify-center items-center space-x-3 my-6 whitespace-nowrap	">
          <%if(product.createdBy == user.id){ %>
            <form
              action="/product/deleteProduct/<%= product.id %>?_method=DELETE"
              method="POST" class="mb-0">
              <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm min-w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Delete Post</button>
            </form>
            <%}%>
            <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm min-w-24 sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Edit Post</button>
        </div>
        <div>
          <div class="mb-6">
            <p class="mb-1 text-sm font-medium text-gray-900 dark:text-white">Description:</p>
            <p><%= product.description %></p>
          </div>
          <div class="mb-6">
            <p class="mb-1 text-sm font-medium text-gray-900 dark:text-white">Software:</p>
            <p><%= product.software %></p>
          </div>
          <div class="mb-6">
            <p class="mb-1 text-sm font-medium text-gray-900 dark:text-white">Tags:</p>
            <p><%= product.tags %></p>
          </div>
        </div>
        <div>
          <a href="/profile" class="flex text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm min-w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Return to Dashboard</a>
        </div>
    </div>
  </section>
</main>

<%- include('partials/footer') -%>


