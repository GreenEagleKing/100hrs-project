<%- include('partials/header') -%>
<div class="container">
  <div>
    <div>
      <h2><%= product.title %></h2>
      <img src="<%= product.file %>" />
      <div>
        <form
          action="/product/likeProduct/<%= product.id %>?_method=PUT"
          method="POST"
        >
          <button type="submit">Like</button>
        </form>
        <h3>Likes: <%= product.likes %></h3>
        <%if(product.createdBy == user.id){ %>
        <form
          action="/product/deleteProduct/<%= product.id %>?_method=DELETE"
          method="POST"
        >
          <button type="submit">Delete</button>
        </form>
        <%}%>
      </div>
    </div>
    <div>
      <p><%= product.description %></p>
    </div>

    <div>
      <a href="/profile">Return to Profile</a>
      <a href="/library">Return to Library</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
