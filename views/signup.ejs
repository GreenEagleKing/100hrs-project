<body class="flex flex-col min-h-screen">
<header>
  <%- include('partials/header') -%>
</header>
    <main class="flex items-center justify-center flex-1">
      <section class="flex justify-between w-full h-full">
              <div>
                <img src="https://media-cdn.elecrow.com/catalog/product/cache/f8158826193ba5faa8b862a9bd1eb9e9/l/a/laser_cutting_service_1.jpg" class="flex h-full object-cover rounded-r-3xl shadow-xl mr-20">
            </div>
            <div class="flex flex-col justify-center mr-auto">
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <h1 class="font-bold text-2xl mb-4">Welcome to FabPad</h1>
                <form action="/signup" method="POST">
                    <div class="form-entry">
                        <label for="userName" class="form-label whitespace-nowrap	 mb-2 text-sm font-medium text-gray-900 dark:text-white">User Name</label>
                        <input type="text" class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" id="userName" name="userName">
                      </div>
                    <div class="form-entry">
                      <label for="exampleInputEmail" class="form-label whitespace-nowrap mb-2 text-sm font-medium text-gray-900 dark:text-white">Email address</label>
                      <input type="email" class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" id="exampleInputEmail" aria-describedby="emailHelp" name="email">
                    </div>
                    <div id="emailHelp" class="form-text form-entry mt-10 mb-10">We'll never share your email with anyone else.</div>
                    <div class="form-entry">
                      <label for="password" class="form-label whitespace-nowrap mb-2 text-sm font-medium text-gray-900 dark:text-white ">Password</label>
                      <input type="password" class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" id="password" name="password">
                    </div>
                    <div class="form-entry">
                        <label for="confirmPassword" class="form-label whitespace-nowrap mb-2 text-sm font-medium text-gray-900 dark:text-white">Confirm Password</label>
                        <input type="password" class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" id="confirmPassword" name="confirmPassword">
                      </div>
                    <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm min-w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Submit</button>
                  </form>
                </div>
      </section>
    </main>

  <footer class="mt-10">
      <%- include('partials/footer') -%>
   </footer>
</body>